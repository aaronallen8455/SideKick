<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.addtocart">
            <block class="Magento\Ui\Component\Control\Button" name="buynow.button" before="-">
                <arguments>
                    <argument name="label" xsi:type="string">Buy Now</argument>
                    <argument name="class" xsi:type="string">action primary buynow</argument>
                    <argument name="template" xsi:type="string">AAllen_BuyNow::buy-now.phtml</argument>
                    <argument name="on_click" xsi:type="string">false</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
